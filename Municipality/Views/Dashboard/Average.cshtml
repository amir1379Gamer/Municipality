@using Microsoft.CodeAnalysis.CSharp.Syntax
@using Saskatoon.ViewModels
@model Municipality.Model.AverageVm
@{
    ViewData["Title"] = "Average";
    var iOs = 0;
    var unknown = 0;
    var android = 0;
    var transitCount = 0;
    var mobileCount = 0;
    foreach (var hit in Model.Hits)
    {
        switch (hit.doc.deviceOS)
        {
            case "iOS":
                iOs++;
                break;
            case "Android":
                android++;
                break;
            case "UNKNOWN":
                unknown++;
                break;
        }
        switch (hit.doc.channel)
        {
            case "Transit":
                transitCount++;
                break;
            case "Mobile":
                mobileCount++;
                break;
        }
    }
    var iOsPercent = iOs * (iOs + unknown + android);
    var androidPercent = android * (iOs + unknown + android);
    var unknownPercent = unknown * (iOs + unknown + android);
    var transitPercent = transitCount * (transitCount + mobileCount);
    var mobilePercent = mobileCount * (transitCount + mobileCount);
}

